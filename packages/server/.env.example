# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database (for storing user sessions and connections)
# Options: sqlite (default), postgresql
DB_TYPE=sqlite
DB_PATH=./data/beekeeper-web.db

# PostgreSQL (if DB_TYPE=postgresql)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=beekeeper_web
# DB_USER=postgres
# DB_PASSWORD=postgres

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
